// Pages/AddContact.razor
@page "/add-contact"
@inject NavigationManager Navigation
@inject ContactService ContactService
@using ContactManagementApp.Services;
@using ContactManagementApp.Models;

<h3>Add New Contact</h3>

<EditForm Model="@newContact" OnValidSubmit="HandleValidSubmit" FormName="AddContactForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div>
        <label>First Name:</label>
        <InputText @bind-Value="newContact.FirstName" @onchange="DebugValue" />
    </div>
    <div>
        <label>Last Name:</label>
        <InputText @bind-Value="newContact.LastName" />
    </div>
    <div>
        <label>Email:</label>
        <InputText @bind-Value="newContact.Email" />
    </div>
    <div>
        <label>Phone Number:</label>
        <InputText @bind-Value="newContact.PhoneNumber" />
    </div>
    <button type="submit">Add Contact</button>
</EditForm>

@code {

    private void DebugValue(ChangeEventArgs e)
    {
        Console.WriteLine($"Changed Value: {e.Value}");
    }
    private Contact newContact {get;set;} = new Contact();

    private void HandleValidSubmit()
    {
        // Call the method on the injected instance of ContactService.
        @* ContactService.AddContact(newContact);
        Navigation.NavigateTo("/contacts"); *@
        Console.WriteLine($"Submitting: {newContact.FirstName}, {newContact.LastName}, {newContact.Email}, {newContact.PhoneNumber}");
    ContactService.AddContact(newContact);
    newContact = new Contact(); // Reset form
    Navigation.NavigateTo("/contacts");
    }
}
